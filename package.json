{
  "name": "actual-events",
  "version": "1.1.9",
  "private": true,
  "type": "commonjs",
  "description": "Sidecar that exposes Actual Budget change events over SSE by diffing periodic syncs.",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node src/index.js --port 4001 --scan-interval-ms 10000",
    "test": "LOG_LEVEL=silent jest --passWithNoTests",
    "prepare": "husky install || true",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@actual-app/api": "^25.6.1",
    "dotenv": "^16.5.0",
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^16.0.0",
    "prettier": "^3.3.3",
    "semantic-release": "^21.0.0",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/commit-analyzer": "^10.0.0",
    "@semantic-release/github": "^9.0.0",
    "@semantic-release/npm": "^9.0.0",
    "@semantic-release/release-notes-generator": "^10.0.0",
    "@semantic-release/git": "^10.0.0",
    "supertest": "^7.0.0"
  },
  "release": {
    "extends": "./release.config.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint && npm test"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  }
}
