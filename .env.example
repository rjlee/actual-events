ACTUAL_SERVER_URL=http://localhost:5006
ACTUAL_PASSWORD=your-server-password
ACTUAL_SYNC_ID=your-budget-sync-id
# Optional if your budget is encrypted
# ACTUAL_BUDGET_ENCRYPTION_PASSWORD=your-budget-password

# Where to store Actual's local cache
BUDGET_DIR=./data/budget

# Scan/lookback tuning
LOOKBACK_DAYS=60
SCAN_INTERVAL_MS=15000

# Server
HTTP_PORT=3000
LOG_LEVEL=info

# Security
# Optional bearer token for auth (if set, required for /events, /nudge, and WS)
# EVENTS_AUTH_TOKEN=changeme

# CORS allowlist (comma-separated origins). Use * to allow any.
# CORS_ORIGINS=*
